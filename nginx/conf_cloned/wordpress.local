server {
    	listen 80;
    	server_name wordpress.local www.wordpress.local;
    	root /var/www/aduong/wordpress;

#    	error_log /var/www/aduong/wordpress/logs/error.log;
#	access_log /var/www/aduong/wordpress/logs/access.log;

	index index.php index.html index.htm;

    	location / {
        	try_files $uri $uri/ =404;
    	}

    	location ~ \.php$ {
        	include snippets/fastcgi-php.conf;
        	fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
     	}

    	location ~ /\.ht {
        	deny all;
    	}

}

